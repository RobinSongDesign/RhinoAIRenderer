<Window x:Class="AIRenderer.Views.AIRenderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIRenderer.Views"
        mc:Ignorable="d"
        Title="AI Render - Image to Image" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,8"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="Foreground" Value="#555"/>
        </Style>
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="InputStylePass" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="#4A90D9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A7BC8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonSecondary" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Image Preview -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Source Image -->
                <GroupBox Grid.Row="0" Header="Source Image" Margin="0,0,0,8">
                    <Border Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1">
                        <Grid>
                            <TextBlock Text="Click 'Capture View' to capture viewport"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#999"
                                       FontSize="14"
                                       Visibility="{Binding HasSourceImage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <Image Source="{Binding SourceImage}" Stretch="Uniform" Margin="4"
                                   Visibility="{Binding HasSourceImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </GroupBox>

                <!-- Result Image -->
                <GroupBox Grid.Row="1" Header="Generated Result" Margin="0,8,0,0">
                    <Border Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1">
                        <Grid>
                            <TextBlock Text="Generated image will appear here"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#999"
                                       FontSize="14"
                                       Visibility="{Binding HasResultImage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <Image Source="{Binding ResultImage}" Stretch="Uniform" Margin="4"
                                   Visibility="{Binding HasResultImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </GroupBox>
            </Grid>

            <!-- Right Panel - Settings -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Capture Section -->
                    <TextBlock Text="1. CAPTURE" Style="{StaticResource SectionHeaderStyle}"/>
                    <Button Content="Capture Active View" Command="{Binding CaptureCommand}"
                            Style="{StaticResource ButtonPrimary}" Margin="0,4,0,0"/>

                    <!-- API Configuration -->
                    <TextBlock Text="2. API CONFIGURATION" Style="{StaticResource SectionHeaderStyle}"/>

                    <TextBlock Text="API URL" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Settings.ApiUrl, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputStyle}"/>

                    <TextBlock Text="API Key" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="ApiKeyBox" Style="{StaticResource InputStylePass}"
                                 PasswordChanged="ApiKeyBox_PasswordChanged"/>

                    <!-- Generation Parameters -->
                    <TextBlock Text="3. GENERATION PARAMETERS" Style="{StaticResource SectionHeaderStyle}"/>

                    <TextBlock Text="Model" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Settings.AvailableModels}"
                              SelectedItem="{Binding Settings.SelectedModel}"
                              Padding="8,6"
                              FontSize="12"
                              Margin="0,0,0,8"/>

                    <TextBlock Text="Prompt" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Settings.Prompt, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"/>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Steps" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Settings.Steps, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Seed (-1 = random)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Settings.Seed, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Guidance Scale" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Settings.GuidanceScale, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Strength (0-1)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Settings.Strength, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Width" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Settings.Width, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Height" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Settings.Height, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Generate Button -->
                    <Button Content="Generate Image" Command="{Binding GenerateCommand}"
                            Style="{StaticResource ButtonPrimary}"
                            Margin="0,20,0,8"/>

                    <!-- Action Buttons -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Save Result" Command="{Binding SaveResultCommand}"
                                Style="{StaticResource ButtonSecondary}" Margin="0,0,4,0"/>
                        <Button Grid.Column="1" Content="Clear All" Command="{Binding ClearCommand}"
                                Style="{StaticResource ButtonSecondary}" Margin="4,0,0,0"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="1" Background="#EEE" Padding="12,8" Margin="0,12,0,0" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"
                           Foreground="#555" FontSize="12"/>
                <ProgressBar Grid.Column="1" IsIndeterminate="True" Width="100" Height="4"
                             Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
